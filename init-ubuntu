apt-get -y update &&
apt-get install -y mosh tmux &&
echo -e "new-session\nset-window-option -g mouse on\nset -g history-limit 30000" > ~/.tmux.conf &&
tmux source-file ~/.tmux.conf &&
echo -e "\n\nsuccessfully completed following:\n> apt-get -y update\n> apt-get install -y mosh tmux\n> # create basic ~/.tmux.conf\n> tmux source-file ~/.tmux.conf"
